<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/stars.css">

<h1>Edit Your Review</h1>

<form action="/parkingLots/<%= id %>/reviews/<%= review._id %>?_method=PUT" method="POST" novalidate
	class="validated-form col-3">
	<fieldset class="starability-heart">
		<input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="<%= review.rating %>" checked
			aria-label="No rating." />
		<input type="radio" id="first-rate1" name="review[rating]" value="1" <%= (review.rating == 1) ? "checked" : "" %>/>
		<label for="first-rate1" title="Terrible">1 star</label>
		<input type="radio" id="first-rate2" name="review[rating]" value="2" <%= (review.rating == 2) ? "checked" : "" %>/>
		<label for="first-rate2" title="Not good">2 stars</label>
		<input type="radio" id="first-rate3" name="review[rating]" value="3" <%= (review.rating == 3) ? "checked" : "" %>/>
		<label for="first-rate3" title="Average">3 stars</label>
		<input type="radio" id="first-rate4" name="review[rating]" value="4" <%= (review.rating == 4) ? "checked" : "" %>/>
		<label for="first-rate4" title="Very good">4 stars</label>
		<input type="radio" id="first-rate5" name="review[rating]" value="5" <%= (review.rating == 5) ? "checked" : "" %>/>
		<label for="first-rate5" title="Amazing">5 stars</label>
	</fieldset>

	<label for="title">Title:</label>
	<input class="form-control" type="text" name="review[title]" id="title" value="<%= review.title %>" required>

	<label for="body">Review:</label>
	<textarea class="form-control mb-4" name="review[body]" id="body" required><%= review.body %></textarea>

	<button class="btn btn-success">Submit</button>
</form>

<a href="/parkingLots/<%= id %>">
	<button class="btn btn-danger">Cancel</button>
</a>